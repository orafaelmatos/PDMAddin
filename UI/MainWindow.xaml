<UserControl x:Class="GestorAddin.UI.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:GestorAddin.UI"
             Background="White"
             MinWidth="200" MinHeight="400">

    <Grid Background="White">
        <TabControl Background="White">

            <!-- VAULT TAB -->
            <TabItem Header="Vault">
                <ui:VaultView x:Name="VaultTab"/>
            </TabItem>

            <!-- CHANGES TAB -->
            <TabItem Header="Changes">
                <ui:ChangesView/>
            </TabItem>

            <!-- REFERENCES TAB -->
            <TabItem Header="References">
                <Grid>
                    <TextBlock Text="References view" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <!-- SETTINGS TAB -->
            <TabItem Header="Settings">
                <Grid>
                    <TextBlock Text="Settings view" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
