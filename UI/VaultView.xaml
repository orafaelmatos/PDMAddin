<UserControl x:Class="GestorAddin.UI.VaultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <DockPanel Grid.Row="0" Margin="5">
            <TextBlock Text="Projects:" VerticalAlignment="Center" Margin="0,0,5,0"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="RefreshButton" 
                        Click="Refresh_Click"
                        Padding="5,0"
                        Margin="5,0,0,0"
                        Background="Transparent"
                        BorderBrush="Transparent">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                </Button>
                <Button x:Name="OpenFolderButton" 
                        Click="OpenFolder_Click"
                        Padding="5,0"
                        Margin="5,0,0,0"
                        Background="Transparent"
                        BorderBrush="Transparent">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                </Button>
            </StackPanel>

            <ComboBox x:Name="ProjectCombo"
                      SelectionChanged="ProjectCombo_SelectionChanged"/>
        </DockPanel>

        <!-- Explorer Tree -->
        <TreeView x:Name="FolderTree"
                  Grid.Row="2"
                  BorderBrush="#DDD"
                  Margin="5,0,5,5">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="Padding" Value="0,2"/>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay"
              Background="#80FFFFFF"
              Visibility="Collapsed">

            <TextBlock Text="Loading..."
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</UserControl>
